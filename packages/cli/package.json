{
  "name": "@epub-tools/cli",
  "version": "2.0.0",
  "description": "EPUB Tools CLI — 命令行处理工具",
  "type": "module",
  "bin": {
    "epub-tools": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@epub-tools/core": "workspace:*",
    "commander": "^13.1.0",
    "ora": "^8.2.0",
    "cli-progress": "^3.12.0",
    "consola": "^3.4.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "typescript": "^5.8.2",
    "tsx": "^4.19.0",
    "vitest": "^3.0.0",
    "@types/node": "^22.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
