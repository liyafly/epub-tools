{
  "name": "epub-tools",
  "version": "3.0.0",
  "private": true,
  "description": "EPUB 跨平台处理工具 — Rust 核心 + Tauri 桌面/移动端 + React 前端 + CLI",
  "packageManager": "pnpm@10.30.3",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build:gui-frontend": "pnpm --filter @epub-tools/gui build",
    "dev": "pnpm --filter @epub-tools/gui dev",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck"
  },
  "keywords": [
    "epub",
    "ebook",
    "epub-tools",
    "tauri",
    "rust",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.8.2",
    "@types/node": "^22.0.0",
    "prettier": "^3.5.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
